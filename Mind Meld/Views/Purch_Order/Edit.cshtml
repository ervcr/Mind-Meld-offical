@model Mind_Meld.Models.Purch_Order

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_PurchEmpLayout.cshtml";
}

<!--This is a header of our page you can copy and paste it in any new view you create, Let's go!-->
<div class="content container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-md-6">
                <h3 class="page-title mb-0">Purchase Order</h3>
            </div>
            <div class="col-md-6">
                <ul class="breadcrumb mb-0 p-0 float-right">
                    <li class="breadcrumb-item"> <a asp-controller="Dashbroad" asp-action="PurchEmpDashboard"><i class="fas fa-home"></i> Home</a></li>
                    <li class="breadcrumb-item"> <a asp-controller="Purch_Order" asp-action="Index"><i></i> Purchase Order</a></li>
                    <li class="breadcrumb-item"> <a asp-controller="Purch_Order" asp-action="Edit"><i></i>Edit</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderID" />
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label"></label>
                <input asp-for="OrderDate" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
              <div class="form-group">
                <label asp-for="RequestID" class="control-label"></label>
                <select asp-for="RequestID" asp-items="@ViewBag.PurchRequestList" class="form-control"></select>
                <span asp-validation-for="RequestID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="POTotal" class="control-label"></label>
                <input asp-for="POTotal" class="form-control" />
                <span asp-validation-for="POTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuppID" class="control-label"></label>
                <select asp-for="SuppID" asp-items="@ViewBag.SupplierList" class="form-control"></select>
                <span asp-validation-for="SuppID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="POProgress" class="control-label"></label>
                <select asp-for="POProgress" class="form-control">
                    <option value="">Select Status</option>
                    <option value="Pending" style="text-color: yellow;">Pending</option>
                    <option value="Complete" style="text-color: black;">Complete</option>
                    <option value="Processed" style="text-color: green">Processed</option>
                    <option value="Cancelled" style="text-color: red ;">Cancelled</option>
                    <option value="Active" style="text-color:blue ;">Active</option>
                </select>
                <span asp-validation-for="POProgress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-danger" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
