<!--This is a box on our dashboard can copy and past it in any new view u create, Lets Goo!-->

<div class="row">
    <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
        <div class="dash-widget dash-widget5">
            <span class="float-left"><img src="~/SideManu/assets/img/dash/dash-1.png" alt="" width="80"></span>
            <div class="dash-widget-info text-right">
                <span>Departmaent</span>
                <h3>5</h3>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
        <div class="dash-widget dash-widget5">
            <div class="dash-widget-info text-left d-inline-block">
                <span>Employees</span>
                <h3>3</h3>
            </div>
            <span class="float-right"><img src="~/SideManu/assets/img/dash/dash-2.png" width="80" alt=""></span>
        </div>
    </div>
    <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
        <div class="dash-widget dash-widget5">
            <span class="float-left"><img src="~/SideManu/assets/img/dash/dash-3.png" alt="" width="80"></span>
            <div class="dash-widget-info text-right">
                <span>Users</span>
                <h3>20</h3>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
        <div class="dash-widget dash-widget5">
            <div class="dash-widget-info d-inline-block text-left">
                <span>Report</span>
                <h3>1</h3>
            </div>
            <span class="float-right"><img src="~/SideManu/assets/img/dash/dash-4.png" alt="" width="80"></span>
        </div>
    </div>
</div>

<!--This is a box on our dashboard Body can copy and past it in any new view u create, Lets Goo!-->
<div class="row">
<div class="col-lg-6 d-flex">
<div class="card flex-fill">
<div class="card-header">
<div class="row align-items-center">
<div class="col-auto">
<div class="page-title">
                            Employee List
</div>
</div>
                    <div class="card">
                        <div class="card-header">
                           @* <h4 class="card-title"></h4>*@
                            <a class="btn btn-primary btn-sm float-right" asp-controller="Employee" asp-action="Create">Add New</a>
                        </div>
                        <div class="card-body">
                            @if (Model.Any())
                            {
                                <table class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Employee</th>
                                            <th>Gender</th>
                                            <th>Grade Level</th>
                                            <th>Department</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var employee in Model)
                                        {
                                            <tr>
                                                <td>@(employee.User.FirstName) @(employee.User.LastName)</td>
                                                <td>@employee.Gender</td>
                                                <td>@employee.GradeLevel</td>
                                                <td>@employee.Dept.DeptName</td> <!-- Update this line -->
                                                <td>
                                                    <a class="btn btn-success btn-sm" asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p>No Employees found.</p>
                            }
                        </div>
                    </div>
</div>
</div>
</div>
</div>


<!--Calander-->

