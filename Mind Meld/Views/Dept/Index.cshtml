@model IEnumerable<Mind_Meld.Models.Dept>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/js/site.js"></script>

<!--This is a header of our page you can copy and past it in any new view u create, Lets Goo!-->
<div class="content container-fluid">

    <div class="page-header">
        <div class="row">
            <div class="col-md-6">
                <h3 class="page-title mb-0">Manage Department</h3>
            </div>
            <div class="col-md-6">
                <ul class="breadcrumb mb-0 p-0 float-right">
                    <li class="breadcrumb-item"> <a asp-controller="Dashbroad" asp-action="AdminDashboard"><i class="fas fa-home"></i> Home</a></li>
                    <li class="breadcrumb-item"> <a asp-controller="Dept" asp-action="Index"><i ></i> Manage Department</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>


@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["AlertMessage"]
        <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
    </div>
}

@if (TempData["AlertMessageEdit"] != null)
{
    <div class="alert alert-success">
        @TempData["AlertMessageEdit"]
        <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
    </div>
}

@if (TempData["AlertMessageDelete"] != null)
{
    <div class="alert alert-success">
        @TempData["AlertMessageDelete"]
        <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
    </div>
}


<table class="content container-fluid table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeptName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptDesc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DeptName)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeptDesc)
            </td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.DeptID">Edit</a> &nbsp
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.DeptID">Details</a>&nbsp
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.DeptID">Delete</a>
                    </div>
                </td>
        </tr>
                }
    </tbody>

</table>
<br />
<br />

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>

<!-- This is the footer of our page -->
<footer class="footer">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                2023 © MindMeld - Online Shopping
            </div>
            <div class="col-md-6">
                <div class="text-md-right footer-links d-none d-md-block">
                    <a href="#">About</a>
                    <a href="#">Contact Us</a>
                </div>
            </div>
        </div>
    </div>
</footer>

