<table class="content container-fluid table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
               <p>Action</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    <a class="btn btn-primary"  asp-action="Edit" asp-route-id="@item.SuppID">Edit</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.SuppID">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.SuppID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

