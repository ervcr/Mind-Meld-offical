@model IEnumerable<Mind_Meld.Models.Employee>
@using Mind_Meld.Models;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/js/site.js"></script>

<!--This is a header of our page you can copy and past it in any new view u create, Lets Goo!-->

<div class="content container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-md-6">
                <h3 class="page-title mb-0">Manage Employees</h3>
            </div>
            <div class="col-md-6">
                <ul class="breadcrumb mb-0 p-0 float-right">
                    <li class="breadcrumb-item"><a asp-controller="Dashbroad" asp-action="AdminDashboard"><i class="fas fa-home"></i> Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Dept" asp-action="Index"><i></i> Employee Department</a></li>
                </ul>
            </div>
        </div>
    </div>

    @if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["AlertMessage"]
            <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
        </div>
    }

    @if (TempData["AlertMessageEdit"] != null)
    {
        <div class="alert alert-success">
            @TempData["AlertMessageEdit"]
            <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Employee List</h4>
            <a class="btn btn-primary btn-sm float-right" asp-controller="Employee" asp-action="Create">Add New</a>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Gender</th>
                            <th>Grade Level</th>
                            <th>Department</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td>@(employee.User.FirstName) @(employee.User.LastName)</td>
                                <td>@employee.Gender</td>
                                <td>@employee.GradeLevel</td>
                                <td>@employee.Dept.DeptName</td> <!-- Update this line -->
                                <td>
                                    <a class="btn btn-success btn-sm" asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
                                    <a class="btn btn-danger btn-sm" asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No Employees found.</p>
            }
        </div>
    </div>
</div>

<!-- This is the footer of our page -->
<footer class="footer">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                2023 © MindMeld - Online Shopping
            </div>
            <div class="col-md-6">
                <div class="text-md-right footer-links d-none d-md-block">
                    <a href="#">About</a>
                    <a href="#">Contact Us</a>
                </div>
            </div>
        </div>
    </div>
</footer>


