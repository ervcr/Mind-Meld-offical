@model IEnumerable<Mind_Meld.Models.Quote>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CustumerLayout.cshtml";

}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuoteDate)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.productDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.message)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuoteDate)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.ExpiryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.message)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.QuoteID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.QuoteID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.QuoteID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
