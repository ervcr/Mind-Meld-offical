@model Mind_Meld.Models.PR_DTL

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_PurchEmpLayout.cshtml";
}

<!--This is a header of our page you can copy and paste it in any new view you create, Let's go!-->
<div class="content container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-md-6">
                <h3 class="page-title mb-0">Delete Process Purchase Request</h3>
            </div>
            <div class="col-md-6">
                <ul class="breadcrumb mb-0 p-0 float-right">
                    <li class="breadcrumb-item"> <a asp-controller="Dashbroad" asp-action="PurchEmpDashboard"><i class="fas fa-home"></i> Home</a></li>
                    <li class="breadcrumb-item"> <a asp-controller="PurchRequest" asp-action="Index"><i></i> Process purchase requests</a></li>
                    <li class="breadcrumb-item active">Delete</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="content container-fluid">
 
    <div class="card-body">
        <h5>Are you sure you want to delete this item?</h5>
        <div>
            <h4>@Model.Product.Name</h4>
            <h4>@Model.Qty</h4>
        </div>


        <div>
            <form method="post" asp-action="Delete" asp-route-id="@Model.PR_DTLid" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
